@{
    ViewBag.Title = "Bienvenidos a Hotel Colibrí";
}

<div class="row">
    <h2 style="margin-right:3em;">Tarifas</h2>
    <input type="button" class="primary-btn moneda" value="Precio en Dolares">
</div>

@foreach (var tipo in ViewBag.tiposDeHabitacion)
{
    <div class="row tiposHabitacion">

        <div class="col-lg-4 col-sm-12 col-md-4" style="padding: 5em 5em 5em 5em;">
            <img class="card-img-top" id="imgTipoHabitacion" src="~/img/About Us/@tipo.Imagen1" alt="No se pudo cargar">
        </div>
        <div class="col-lg-6 col-sm-12 col-md-6">

            <h3>@tipo.Nombre1</h3>
            <p>@tipo.Descripcion1</p>
            <div>
                <ul>
                    @foreach (var caracteristica in tipo.Caracteristicas1)
                    {
                        <li>@caracteristica.Nombre1 : @caracteristica.Descripcion1</li>
                    }
                </ul>
                <h4 class="precioColones">Precio: ₡@tipo.PrecioColones1</h4>
                <h4 class="precioDolares">Precio: $@tipo.PrecioDolares1</h4>
            </div>
        </div>

    </div>
    
}

    <script>
        $(".precioDolares").hide();
    </script>