
@{
    ViewBag.Title = "CambiarDescripcionHabitacion";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.NombreUnico</h2>

<div>
    @using (Html.BeginForm("ActualizarInformacionHabitacion", "Admin", FormMethod.Post))
    {
        <div class="row">
            <div class="col-3" style="margin-left: 3em;">
                @ViewBag.tipoDeHabitacion.Nombre1
                <input type="hidden" id="tipoHabitacion" name="tipoHabitacion" value="@ViewBag.tipoDeHabitacion.Id1">
            </div>
            <div class="col-6">
                Tarifa diaria: ₡ @Html.TextBox("precioColones", @ViewBag.tipoDeHabitacion.PrecioColones1 as String, new { @class = "span4", @type = "number", @min = "0", @required = "required" })
                &nbsp; &nbsp;  $ @Html.TextBox("precioDolares", @ViewBag.tipoDeHabitacion.PrecioDolares1 as String, new { @class = "span4", @type = "number", @min = "0", @step = "0.01", @required = "required" })
            </div>

        </div>
        <div class="form-group" style="margin-top: 5em;">
            <label for="descripcion">Descripcion:</label>
            @Html.TextArea("descripcion", @ViewBag.tipoDeHabitacion.Descripcion1 as String, new { @class = "form-control", @rows = 5, @required = "required" })
        </div>
        <div class="row" style="margin-top: 5em;">
            <div class="col-4 form-group">
                <label>Imagen actual:</label>
                <img class="card-img-top" id="imgTipoHabitacion" src="~/img/About Us/@ViewBag.tipoDeHabitacion.Imagen1" alt="No se pudo cargar" style="display: flex; align-items: center; height: 200px; width: 200px;">
            </div>
            <div class="col-4" style="margin-top: 5em;">
                <label for="myfile">Subir nueva imagen</label>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile01">
                        <label class="custom-file-label" for="inputGroupFile01">Seleccione imagen</label>
                    </div>
                </div>
            </div>
            <div class="col-4 container text-center" style="height: auto; display: flex;">
                <div style="display: inline-block; align-self: flex-end;">
                    <button type="submit" class="btn btn-success" onclick="">Aceptar</button>
                    @Html.ActionLink("Cancelar", "CancelarModificacionDescripcionTipoHabitacion", "Admin", new { confirm = true }, new { @class = "btn btn-secondary", onclick = "return confirm('¿Desea deshacer los cambios?')" })
                </div>
            </div>
        </div>
    }
    </div>
