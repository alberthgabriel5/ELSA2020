            <div class='input-group date' id='salida'>
                <input type='text' id="fechaSalida" name="fechaSalida" class="form-control" required />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class='col-sm-3'>
        <p>Tipo de Habitaci&oacute;n</p>
        <div class="form-group">
            <div>
                <select class="browser-default custom-select" id="tipoHabitacion"></select>
