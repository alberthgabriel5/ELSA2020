
@{
    ViewBag.Title = "AdministrarPaginaFacilidades";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

<h1>Administrar P&aacute;gina </h1>

<section>
    <h2> &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;Administrar Facilidades</h2>
    <br />
    @foreach (var t in (List<Facilidades>)ViewBag.ContenidoPagina)
    {
        <div class="row">
            <div class="card col-lg-10 col-md-10 col-xs-10" style="padding: 0">
                <div class="card-header">
                    Valor Actual
                </div>
                <img class="card-img-top img-responsive" id="mainImage" src="@t.ImgSrc">
                <div class="card-body">
                    <p class="form-control" id="textAreaNuevaDescripcion" rows="4">@t.descripcionEsp</p><br />
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-success" onclick="obtenerFacilidad(@t.id)">
                        Actualizar
                    </button>
                    @*<button class="btn btn-success" data-toggle="modal" data-target="#modalFacilidades" onclick="obtenerFacilidad(@t.id) ">Aceptar</button>*@
                    <button class="btn btn-danger" onclick="(desecharCambios())">Cancelar</button>

                </div>
            </div>


        </div>
        <br />
        <br />
    }
</section>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="idF" disabled></p>
                <textarea class="form-control" id="textAreaDescripcion" rows="4"></textarea><br />

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success">Aceptar</button>
            </div>
        </div>
    </div>
</div>


